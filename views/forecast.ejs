<!DOCTYPE html>
<html>
  <%- include("partials/head") %>
  <body class="min-h-screen bg-gradient-to-br from-sky-400 to-teal-500 py-10 px-4">
    <div class="max-w-3xl mx-auto space-y-6">

      <!-- Location Card -->
      <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-2 text-gray-800 text-center"><%= location.name %></h2>
        <p class="text-gray-600 text-center">Latitude: <%= location.lat %> | Longitude: <%= location.lon %></p>
      </div>

      <!-- Current Weather -->
      <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-semibold mb-4 text-gray-700 text-center">🌡 Current Weather</h3>
        <ul class="space-y-1 text-gray-700 text-center">
          <li>Temperature: <%= current.temperature_2m %> °C</li>
          <li>Wind Speed: <%= current.wind_speed_10m %> km/h</li>
          <li>Wind Direction: <%= current.wind_direction_10m %>°</li>
        </ul>
      </div>

      <!-- Hourly Forecast -->
      <div class="bg-white/80 backdrop-blur-md rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-semibold mb-4 text-gray-700">⏱ Hourly Forecast</h3>
          <div class="flex space-x-4 overflow-x-auto pb-2 scrollbar-thin scrollbar-thumb-teal-400 scrollbar-track-teal-100 hover:scrollbar-thumb-teal-500 transition-all">
          <% for (let i = 0; i < hourly.time.length; i++) { %>
            <div class="flex flex-col items-center bg-white/80 rounded-xl p-4 min-w-[100px] shadow-md hover:shadow-lg transform hover:scale-105 transition-all">
              <!-- Weather Emoji -->
              <div class="text-2xl"><%= hourly.icons[i] %></div>

              <!-- Time -->
              <span class="text-sm text-gray-500">
                <%= new Date(hourly.time[i]).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
              </span>

              <!-- Temp -->
              <span class="text-lg font-bold text-teal-700"><%= hourly.temperature_2m[i] %>°C</span>

              <!-- Wind -->
              <span class="text-xs text-gray-600">
                💨 <%= hourly.wind_speed_10m[i] %> km/h
              </span>
            </div>
          <% } %>
        </div>
      </div>

    </div>
  </body>
</html>
